<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/logoFragment">

    <!-- 🌟 SPLASH / LOGO -->
    <fragment
        android:id="@+id/logoFragment"
        android:name="com.example.resepmakanan.ui.fragment.LogoFragment"
        android:label="Logo"
        tools:layout="@layout/fragment_logo">
        <action
            android:id="@+id/action_logoFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/logoFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- 🔐 LOGIN -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.resepmakanan.ui.fragment.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">

        <!-- ✅ Saat login sukses, hapus backstack login -->
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>

    <!-- 📝 REGISTER -->
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.resepmakanan.ui.fragment.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- 🏠 HOME -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.resepmakanan.ui.fragment.HomeFragment"
        android:label="Dashboard"
        tools:layout="@layout/home">

        <!-- ✅ Navigasi -->
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />

        <action
            android:id="@+id/action_homeFragment_to_recipesFragment"
            app:destination="@id/recipesFragment" />

        <action
            android:id="@+id/action_homeFragment_to_favoriteRecipesFragment"
            app:destination="@id/favoriteRecipesFragment" />
    </fragment>

    <!-- 🍳 RESEP -->
    <fragment
        android:id="@+id/recipesFragment"
        android:name="com.example.resepmakanan.ui.fragment.recipes.RecipesFragment"
        android:label="Recipes"
        tools:layout="@layout/fragment_recipes" />

    <!-- 💛 FAVORIT -->
    <fragment
        android:id="@+id/favoriteRecipesFragment"
        android:name="com.example.resepmakanan.ui.fragment.favorites.FavoriteRecipesFragment"
        android:label="Favorites"
        tools:layout="@layout/fragment_favorite_recipes" />

    <!-- ✏️ EDIT PROFIL -->
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.resepmakanan.ui.fragment.profile.EditProfileFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_edit_profile" />

    <!-- 👤 PROFIL -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.resepmakanan.ui.fragment.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">

        <!-- ✅ Back ke Home -->
        <action
            android:id="@+id/action_profileFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/profileFragment"
            app:popUpToInclusive="true" />

        <!-- ✅ Logout -->
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />

        <!-- ✅ Edit Profil -->
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>

</navigation>
