<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_profile_gradient"
    tools:context=".ui.fragment.profile.ProfileFragment">

    <!-- Foto Profil -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgProfile"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/ic_chef"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="4dp"
        android:elevation="10dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Foto Profil" />

    <!-- Nama di bawah foto -->
    <TextView
        android:id="@+id/tvProfileNameTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adel Najmi"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/imgProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Card Info (Full Width) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardProfileInfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="12dp"
        android:backgroundTint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/tvProfileNameTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="32dp"
                android:paddingTop="48dp"
                android:paddingBottom="80dp">

                <!-- Nama -->
                <TextView
                    android:text="Nama"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Adel Najmi"
                    android:textColor="#111111"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp"/>

                <!-- Email -->
                <TextView
                    android:text="Email"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="adel@example.com"
                    android:textColor="#111111"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp"/>

                <!-- Password -->
                <TextView
                    android:text="Password"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/tvPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="••••••••"
                    android:textColor="#111111"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="25dp"/>

                <!-- Tombol Edit -->
                <Button
                    android:id="@+id/btnEditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:backgroundTint="@color/green"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp"
                    android:paddingVertical="14dp"
                    android:elevation="4dp"
                    android:background="@drawable/btn_rounded_green" />

                <!-- Tombol Logout -->
                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:backgroundTint="@color/darkPink"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="32dp"
                    android:paddingVertical="14dp"
                    android:elevation="4dp"
                    android:background="@drawable/btn_rounded_green"/>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
